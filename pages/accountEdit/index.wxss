/* index.wxss */

.edit-header{
  background-color: #fff;
  text-align: center;
  padding:50px 0;
}
.edit-header image{
  width:80px;
  height: 80px;
}
.edit-header text{
  display: block;
  margin-top: 10px;
  color: #999;
  font-size: 14px;
}
.edit-form{
  background-color: #fff;
  font-size: 14px;
}
.edit-form input{
   font-size: 14px;
}
.edit-add-item{
  padding: 10px 0px;
  color: #999;
  line-height: 51rpx;
}
.edit-add-item label{
  margin: 0 10px;
}
.edit-add-item+.edit-add-item{
  border-top: 1px solid #ddd;
}