
.section{
  padding:0 30rpx;
  background: #fff;
  font-size: 16px;
}
.section.top{
  padding: 30rpx 30rpx;
}
.section+.section{
  margin-top: 20rpx;
}
.shopimg{
  width:120rpx;
  height: 120rpx;
  margin-right: 30rpx;
  box-shadow: 1px 2px 4px 0 rgba(255,0,76,0.16);
}
.shopName{
  font-size: 16px;

}
.shopAddress{
  font-size: 12px;
  color: #2E2E2E;
  padding-top: 20rpx;

}
.section .ic{
  width: 46rpx;
  height: 46rpx;
  margin-right: 10rpx;
}
.section  .item+.item{
  border-top: 1px solid #f4f4f4;
}
.section  .item{
  height: 88rpx;
  line-height: 88rpx;
}
.s1{
  padding-right: 20rpx;
}
.gray{
  font-size: 12px;
  color: #999999;
}
.recommend_scroll_x_box {
  margin-top: 10rpx;
  height: 245rpx;
  white-space: nowrap;
  display: flex;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.recommend_hot_box {
  width: 210rpx;
  height: 230rpx;
  margin-right: 24rpx;
  display: inline-block;
}
.recommend_hot_image {
  width: 210rpx;
  height: 230rpx;
}
