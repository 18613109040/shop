/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
page{
  background-color: #fafafa;
  font-family: "microsoft yahei";
  overflow-x: hidden;
 
}

.flex{
  display: flex;
  display: -webkit-flex;
}
.flex-1{
  flex: 1;
}
.flex-2{
  flex: 2;
}
.align-items-center{
  align-items: center;
}
.block-inline{
  display: inline-block;
}
.justify-content{
  justify-content: center
}

.right{
  float:right;
}
.left{
  float:left;
}
.center{
  text-align: center;
}
.clear{
  clear: both;
}
.clearfix:after{
  content:'';
  display:table;
  clear:both;
}
.text-hidden-1{
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
.text-hidden-2{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  word-break: break-all;
  overflow: hidden;

}
.text-hidden-3{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  word-break: break-all;
  overflow: hidden;

}.text-hidden-4{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  word-break: break-all;
  overflow: hidden;

}
.space-between{
   justify-content:space-between;
}
.margin20{
  margin:20px;
}
/****标题字体***/
.heading-font{
  font-size: 17pt;
}
.body-font{
  font-size: 18px;
}

.body-base{
  font-size: 16px;
}
.body-m{
  font-size: 14px;
}
.body-small{
  font-size: 13px;
}
.body-sm{
  font-size:12px;
}
.black-color{
  color: #353535;
}
.grey-color{
  color: #888888;
}
.red-color{
