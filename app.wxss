/* 选择规格弹出框 begin */
/*mask*/
.drawer_screen { 
 width: 100%; 
 height: 100%; 
 position: fixed; 
 top: 0; 
 left: 0; 
 z-index: 1000; 
 background: #333333; 
 opacity: 0.7; 
 overflow: hidden; 
} 
  
/*content*/
.drawer_box { 
 width: 650rpx; 
 overflow: hidden; 
 position: fixed; 
 top: 50%; 
 left: 0; 
 z-index: 1001; 
 background: #fff; 
 margin: -150px 50rpx 0 50rpx; 
 border-radius: 3px; 
} 
.drawer_box .x-calnel{
  float: right;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}
.drawer_title{ 
 padding:10rpx 40rpx; 
 font: 20px "microsoft yahei"; 
 text-align: center; 
 border-bottom: 1px solid  #E8E8EA;
} 
.drawer_content { 
 height: 210px; 
 font-size: 12px;
} 
.drawer_content  .drawer-body{
  height:100%;
  overflow-y: auto;
  
}
  
.drawer_footer{ 
 padding:30rpx 20rpx;
 border-top: 1px solid #E8E8EA; 
 background: #F8F7FC ;
 position: relative;
} 

.drawer_title .name{

  text-align: center;
  width: 100%;
}
.drawer_footer .wight{
  font-size: 14px;
}
.drawer_footer .money{
  color: #FF004C ;
  margin-right: 10rpx;
}
.drawer_content .gui_ge{
  padding:0 30rpx;
}
.drawer_content .add_cart{
 height: 100%;
 overflow-y: auto;
}
.drawer_content .gui_ge .rang{
  background: #FFFFFF;
  padding: 10rpx 30rpx 10rpx 30rpx;
  border: 1px solid #DDDDDD ;
  display:inline-block;
  margin:0 20rpx 20rpx 0;
}
.drawer_content .gui_ge  .rang-change{
  padding: 10rpx 30rpx 10rpx 30rpx;
  border: 1px solid #FF004C ;
  color: #FF004C;
  display:inline-block;
  margin:0 20rpx 20rpx 0;

}
.drawer_footer .add_cart{
  background: #FF004C;
  padding: 17rpx;
  color: white;
  width: 200rpx;
  text-align: center;
  position: absolute;
  right: 20rpx;
  border-radius: 10rpx;
  top:13rpx;
}
.drawer_content .guige-name{
  padding: 30rpx;
}
.drawer_footer .dish-item-count {
  padding:0;
}
/* 选择规格弹出框 end */


